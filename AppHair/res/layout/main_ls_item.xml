<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_list_item"
     >

    <ImageView
        android:id="@+id/main_ls_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="14dp"
        android:src="@drawable/shop_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:layout_alignBottom="@+id/main_ls_item_icon"
        android:layout_alignTop="@+id/main_ls_item_icon"
        android:layout_toRightOf="@+id/main_ls_item_icon"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/main_ls_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <!-- 
             <RatingBar
                android:id="@+id/main_ls_item_ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:isIndicator="true"
                 />
             -->
           
			<ImageView
			    android:id="@+id/main_ls_item_img_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
			    />
            <TextView
                android:id="@+id/main_ls_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/grey"
                android:text="price" />
        </LinearLayout>
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            
              <TextView
                android:id="@+id/main_ls_item_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/grey"
                android:text="address" />

            <TextView
                android:id="@+id/main_ls_item_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/grey"
                android:text="distance" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>