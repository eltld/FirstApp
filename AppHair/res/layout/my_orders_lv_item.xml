<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/my_orders_item_tv_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <ImageView 
            android:id="@+id/my_orders_item_img_shop_icon"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:src="@drawable/shop_default"
            />

        <TextView
            android:id="@+id/my_orders_item_tv_order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="58dp"
            android:layout_toRightOf="@+id/my_orders_item_img_shop_icon"
            android:text="Medium11 Text"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/my_orders_item_tv_order_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/my_orders_item_tv_order_name"
            android:layout_centerVertical="true"
            android:text="TextView" />

        <TextView
            android:id="@+id/my_orders_item_tv_order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/my_orders_item_tv_order_name"
            android:text="TextView" />
        
    </RelativeLayout>
	
</LinearLayout>
