<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/my_history_infor_item_salary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/my_history_infor_item_comment"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="17dp"
        android:layout_marginLeft="18dp"
        android:text="999" />

    <TextView
        android:id="@+id/my_history_infor_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/my_history_infor_item_salary"
        android:layout_centerVertical="true"
        android:text="2013" />

    <TextView
        android:id="@+id/my_history_infor_item_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/my_history_infor_item_time"
        android:layout_alignParentRight="true"
        android:text="Comment" />

</RelativeLayout>
