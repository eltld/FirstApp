<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_product_square"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/item_food_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/bg_grid_item"
        />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingLeft="5dp"
    	android:paddingRight="5dp"
    	android:layout_marginTop="5dp"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/item_food_look"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textColor="@drawable/text_grey"
            android:drawableLeft="@drawable/icon_scan"
            android:textSize="12sp"
            android:text=" 120" />

        <TextView
            android:id="@+id/item_food_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
           	android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/item_food_look"
            android:textSize="12sp"
            android:textColor="@drawable/text_grey"
            android:drawableLeft="@drawable/icon_parise"
            android:text=" 120" />

        <TextView
            android:id="@+id/item_food_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/item_food_ok"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:singleLine="true"
            android:textSize="12sp"
            android:text="" />

    </RelativeLayout>
     <View 
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:paddingLeft="5dp"
   		android:paddingRight="5dp"
        android:background="#cccccc"
        />
    <TextView
        android:id="@+id/item_food_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
    	android:paddingRight="5dp"
    	android:textColor="@drawable/text_grey"
        android:text="name" />

</LinearLayout>
